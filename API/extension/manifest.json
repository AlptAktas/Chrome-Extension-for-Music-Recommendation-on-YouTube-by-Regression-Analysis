{
  "manifest_version": 3,
  "name": "RecTube",
  "description": "This extension will recommend music based on current Youtube video.",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/api/*"
  ]
}